<div class="page-header">
    <h1>Details of Event</h1>
</div>


<table class="table table-bordered">
    <tbody>
        <tr><th>Tournament</th><td><%= event.tournament_name %></td></tr>
        <tr><th>Event Start Time</th><td><%= xxtd_UtcToHumanDate(event.event_start_time, 'Y') %></td></tr>
        <tr><th>Event Name</th><td><%= event.event_name %></td></tr>
        <tr><th>Event Type</th><td><%= event.event_type_code_m %></td></tr>
        <tr><th>Over/Under</th><td><%= event.event_type_overunder_flag_m %></td></tr>
        <tr><th>Threshold</th><td><%= event.event_type_threshold %></td></tr>
        <tr><th>Event Threshold Cutoff Date</th><td><%= xxtd_UtcToHumanDate(event.event_type_cutoff_date, 'Y') %></td></tr>
        <tr><th>Event Check-In Time</th><td><%= xxtd_UtcToHumanDate(event.event_check_in_time, 'Y') %></td></tr>
    </tbody>
</table>

<div class="well">
    <%- link_to('<i class="icon-edit icon-white"></i> Edit', path_to.edit_event(event), {class: 'btn btn-primary'}) %>
    <%- link_to('<i class="icon-remove icon-white"></i> Delete', path_to.event(event), {class: 'btn btn-danger', method: 'delete', remote: true, jsonp: '(function (u) { location.href = u; })'}) %>
    or
    <%- link_to('Back to index', path_to.events()) %>
</div>