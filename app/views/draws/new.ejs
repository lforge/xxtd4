<div class="page-header">
    <h1>New draw</h1>
</div>

<% form_for(draw, {action: path_to.draws(), method: 'POST', id: "draw_form", class: 'form-horizontal'}, function (form) { %>
    <%- partial('draws/form.ejs', {locals: {form: form, draw: draw}}) %>
    <div class="form-actions">
        <%- form.submit('<i class="icon-ok icon-white"></i> Create draw', {class: 'btn btn-primary'}) %> or
        <%- link_to('Cancel', path_to.draws(), {class: 'btn'}) %>
    </div>
<% });%>
