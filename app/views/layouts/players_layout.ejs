<!DOCTYPE html>
<html lang="en">
    <head>
        <title><%= title %></title>
        <%- stylesheet_link_tag('bootstrap', 'style', 'bootstrap-responsive', 'bootstrap.min', 'ui-lightness/jquery-ui-1.8.18.custom') %>
        <%- javascript_include_tag('jquery-1.7.1.min', 'jquery-ui-1.8.18.custom.min', 'bootstrap', 'rails', 'application', 'bootstrap-dropdown', 'bootstrap-modal', 'jquery.maskedinput-1.3.min') %>
        <%- csrf_meta_tag() %>
    </head>
    <body>

      <%- partial('menu.ejs') %>
            
        <div class="container">
            <% var flash = request.flash('info').pop(); if (flash) { %>
                <div class="alert alert-info">
                    <a class="close" data-dismiss="alert">×</a>
                    <%- flash %>
                </div>
            <% } %>
            
            <% flash = request.flash('error').pop(); if (flash) { %>
                <div class="alert alert-error">
                    <a class="close" data-dismiss="alert">×</a>
                    <%- flash %>
                </div>
            <% }; %>
            
            <%- body %>
<script>
    // Activate the bootsrap dropdown JQuery plug-in.
    $(document).ready(function () {
        $(".dropdown-toggle").dropdown();
    });

    // Activate the JQuery date picker.
    $(function() {
		  $("#rating_asof_date_pick").datepicker({
        altField: "#Player_rating_asof_date"
       ,altFormat: "@"
      });
    });
    $(function() {
		  $("#usatt_expiredate_pick").datepicker({
        altField: "#Player_usatt_expiredate"
       ,altFormat: "@"
      });
    });
    $(function() {
		  $("#birth_date_pick").datepicker({
        altField: "#Player_birth_date"
       ,altFormat: "@"
      });
    });
    // Call maskedinput JQuery Plug-in by Josh Bush Copyright (c) 2007-2011 Josh Bush (digitalbush.com)
    jQuery(function($){
      $("#mobile_phone_formatted").mask("(999) 999-9999");
      $("#home_phone_formatted").mask("(999) 999-9999");
      $("#Player_postal_code").mask("99999");
    });

    // JQuery function to assign the value from the xxxx_phone_formatted to Player_xxx_phone fields.
    $('#player_form').bind('submit', function(event) {
        $('#Player_mobile_phone').val($('#mobile_phone_formatted').val().replace(/\D/g, ''));
        $('#Player_home_phone').val($('#home_phone_formatted').val().replace(/\D/g, ''));
    });

</script>
            <hr />
            <footer>
                <p><%= xxtd_DisplayFooter() %></p>
            </footer>
        </div>
    </body>
</html>