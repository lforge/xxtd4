<div class="page-header">
    <h1>New Facility</h1>
</div>

<% form_for(facility, {action: path_to.facilities, method: 'POST', id: "facility_form", class: 'form-horizontal'}, function (form) { %>
    <%- partial('facilities/form.ejs', {locals: {form: form, facility: facility, state_or_province_list: state_or_province_list, country_list: country_list}}) %>
    <div class="form-actions">
        <%- form.submit('<i class="icon-ok icon-white"></i> Create Facility', {class: 'btn btn-primary'}) %> or
        <%- link_to('Cancel', path_to.facilities(), {class: 'btn'}) %>
    </div>
<% });%>
